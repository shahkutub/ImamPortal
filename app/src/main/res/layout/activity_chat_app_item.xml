<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        >

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/image_message_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/text_message_name"
                android:text="Admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/chat_left_msg_text_view"
                android:text="hi man, how are you?"
                android:background="@drawable/msg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/text_message_name"
                app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/chat_left_text_message_time"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_marginLeft="4dp"
                android:text="11:40"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/chat_left_msg_text_view"
                app:layout_constraintLeft_toRightOf="@+id/chat_left_msg_text_view" />

        </android.support.constraint.ConstraintLayout>


