<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        >


        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:src="@drawable/imam"
            android:layout_height="@dimen/_40sdp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_left"
            android:layout_margin="5dp"
            android:padding="@dimen/_8sdp"
            >

        <TextView
            android:id="@+id/chat_left_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="fghgfdg hhjjjjjkjklklklklhjkjkjkkkjkjkjkjkjkjkjkjkjkjkjkjkjkjkjkjkjkjkjkjkkk"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            />

            <TextView
                android:id="@+id/chat_right_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="fghgfdg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@id/chat_left_msg_text_view"
               />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/chat_right_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="fghgfdg"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/msg_right"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:src="@drawable/imam"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>

</LinearLayout>