<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relSplash"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_150sdp"
        android:text="পরিকল্পনা ও বাস্তবায়নে"
        android:textColor="#5E397A"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="@dimen/_22sdp"
        />

    <LinearLayout
        android:id="@+id/a2i"
        android:layout_below="@+id/pori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/reple_effect"
        >
        <ImageView
            android:id="@+id/imgA2i"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/ic_a21logo"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="@dimen/_60sdp"
        android:src="@drawable/ic_fd"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/a2i"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_10sdp"
        tools:ignore="VectorDrawableCompat" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_tollbar"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"
            android:text="nanosoftbd.com/imamportal/"

            />

    </LinearLayout>

</RelativeLayout>